# This script formats every file with astyle with the following options

astyle \
	--style=break \
	--indent=spaces=4 \
	--unpad-paren \
	--pad-oper \
	--pad-header \
	--align-pointer=name \
	--indent-switches \
	--min-conditional-indent=0 \
	--max-code-length=80 \
	--max-instatement-indent=80 \
	--break-after-logical \
	--keep-one-line-blocks \
	--mode=c \
	--suffix=none \
	"$@"

